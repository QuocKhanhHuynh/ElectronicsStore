@model ElectronicsStore.Models.Users.LoginRequest

@section Category{
    category-style-2
}
@section Script{
    @{
        if(ViewBag.Notify != null)
        {
            <script>alert('@Html.Raw(ViewBag.Notify)')</script>
            ViewBag.Notify = null;
        }
    }
}

@{
    ViewData["Title"] = "Login";
}

<div class="login-register-wrapper">
    <div class="container">
        <div class="member-area-from-wrap">
            <div class="row">
                <!-- Login Content Start -->
                <div style="margin-left: auto; margin-right: auto;" class="col-lg-6">
                    <div class="login-reg-form-wrap  pr-lg-50">
                        <h2>Đăng nhập</h2>
                        <form asp-action="Login" asp-controller="Account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="single-input-item">
                                <input asp-for="UserName" placeholder="Nhập Username" required />
                            </div>
                            <div class="single-input-item">
                                <input asp-for="Password"  type="password" placeholder="Nhập mật khẩu" required />
                            </div>
                            <div class="single-input-item">
                                <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                    <div class="remember-meta">
                                        <a asp-action="ForgetPassword" asp-controller="Account">Quên mật khẩu?</a>
                                        <!--<div class="custom-control custom-checkbox">
                                            <input asp-for="Remember" type="checkbox" class="custom-control-input" id="rememberMe">
                                            <label class="custom-control-label" for="rememberMe">Ghi nhớ tôi</label>
                                        </div> -->
                                        
                                        <input asp-for="Remember" type="hidden" class="custom-control-input" id="rememberMe" value="@false">
                                    </div>
                                    <a asp-action="RegisterAccount" asp-controller="Account">Chưa có tài khoản?</a>
                                </div>
                            </div>
                            <div class="single-input-item">
                                <button class="sqr-btn">Đăng nhập</button>
                            </div>
                        </form>
                        <!-- <div class="single-input-item">
                                <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                    <a asp-action="RegisterAccount" asp-controller="Account">Chưa có tài khoản?</a>
                                </div>
                            </div>
                        </div> -->
                        
                </div>
                <!-- Login Content End -->
            </div>
        </div>
    </div>
</div>