@using ElectronicsStore.Models.Users
@model LoginRequest
@{
    Layout = "_LoginLayout";
}

@section Script{
    @if (ViewBag.Success != null)
    {
        <script>alert('@Html.Raw(ViewBag.Success)')</script>
        ViewBag.Success = null;
    }
}

 <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
    <div class="card-body">
        <form asp-action="Login" asp-controller="Account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-floating mb-3">
        <input class="form-control" asp-for="UserName" type="text" placeholder="Nhập tài khoản" />
            <label asp-for="UserName">Username</label>
        </div>
        <div class="form-floating mb-3">
        <input class="form-control" asp-for="Password" type="password" placeholder="Password" />
        <label asp-for="Password">Mật khẩu</label>
        </div>
        <!--
            <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Remember" type="checkbox" value="" />
        <label class="form-check-label">Nhớ mật khẩu</label>
        </div>
        -->
        <input class="form-check-input" asp-for="Remember" type="hidden" value="@false" />
        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
        <a class="small" asp-action="ForgetPassword">Quên mật khẩu</a>
        <button class="btn btn-primary" type="submit">Đăng nhập</button>
    </div>
    </form>
</div>
