@model ElectronicsStore.Models.Users.UserUpdateRequest

@{
    ViewData["Title"] = "Cập nhật tài khoản";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Cập nhật tài khoản</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="GetMyDetail" asp-controller="Account">Chi tiết người dùng</a></li>
        <li class="breadcrumb-item active">Cập nhật tài khoản</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="GetUserDetail" asp-controller="Account">Về chi tiết người dùng </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="UpdateAccount">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FullName" class="control-label"></label>
                            <input value="@Model.FullName" asp-for="FullName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input value="@Model.Email" asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input value="@Model.PhoneNumber" asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input value="@Model.Address" asp-for="Address" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

