@model ElectronicsStore.AdminApp.Models.Product.CategoryDeleteRequest

@{
    ViewData["Title"] = "Xóa loại hàng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa loại hàng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="GetCategoryPagination" asp-controller="Product">Danh sách loại hàng</a></li>
        <li class="breadcrumb-item active">Xóa loại hàng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="GetCategoryPagination" asp-controller="Product">Về danh sách loại hàng</a>
        </div>
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class = "col-sm-10">
                         @Html.DisplayFor(model => model.Id)
                    </dd>
                </dl>
                <form asp-action="DeleteCategory">
                     <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>