@model ElectronicsStore.Models.Products.ProductUpdateRequest

@{
    ViewData["Title"] = "UpdateProduct";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Cập nhật sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Product">Danh sách sản phẩm</a></li>
        <li class="breadcrumb-item active">Cập nhật sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về danh sách sản phẩm</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SalePrice" class="control-label"></label>
                            <input asp-for="SalePrice" class="form-control" />
                            <span asp-validation-for="SalePrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OfferPrice" class="control-label"></label>
                            <input asp-for="OfferPrice" class="form-control" />
                            <span asp-validation-for="OfferPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Origin" class="control-label"></label>
                            <input asp-for="Origin" class="form-control" />
                            <span asp-validation-for="Origin" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Introduce" class="control-label"></label>
                            <textarea id="txt_introduce" asp-for="Introduce" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="Introduce" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea id="txt_description" asp-for="Description" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image" class="control-label"></label>
                        </div>
                        <div class="span6" id="attachment_items">
                            <p><input type="file" name="image" /></p>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <a id="btn_add_attachment" href="#" class="btn btn-success">Thêm đính kèm</a>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>