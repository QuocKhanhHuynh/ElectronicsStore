@model ElectronicsStore.AdminApp.Models.Product.StatusDeleteRequest

@{
    ViewData["Title"] = "Xóa trạng thái";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa trạng thái</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="GetStatuses" asp-controller="Product">Danh sách trạng thái</a></li>
        <li class="breadcrumb-item active">Xóa trạng thái</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="GetStatuses" asp-controller="Product">Về danh sách trạng thái</a>
        </div>
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                </dl>
                <form asp-action="DeleteStatus">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>