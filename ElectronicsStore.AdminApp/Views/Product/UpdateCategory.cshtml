@model ElectronicsStore.Models.Categories.CategoryUpdateRequest

@{
    ViewData["Title"] = "Cập nhật loại hàng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Cập nhật loại hàng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="GetCategoryPagination" asp-controller="Product">Danh sách loại hàng</a></li>
        <li class="breadcrumb-item active">Cập nhật loại hàng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="GetCategoryPagination" asp-controller="Product">Về danh sách loại hàng</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="UpdateCategory" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>